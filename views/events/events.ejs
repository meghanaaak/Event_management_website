<!DOCTYPE html>
<html>
<head>
	<title>Details</title>
	<style>
		body {
	font-family: Arial, sans-serif;
	margin: 0;
	padding: 0;
	background-color: #f8f8f8;
}

nav {
	background-color: #333;
	height: 50px;
}

nav ul {
	list-style: none;
	margin: 0;
	padding: 0;
	display: flex;
	align-items: center;
	height: 100%;
}

nav ul li {
	margin: 0 10px;
}

nav ul li a {
	color: #fff;
	text-decoration: none;
	padding: 5px;
	border-radius: 5px;
}

.container {
	margin: 20px auto;
	width: 80%;
	display: flex;
	flex-wrap: wrap;
	justify-content: center;
}

.event-box {
	margin: 10px;
	padding: 20px;
	background-color: #fff;
	border: 1px solid #ddd;
	box-shadow: 0 0 5px rgba(0,0,0,0.3);
}

.label {
	font-weight: bold;
	margin-bottom: 10px;
}

.value {
	margin-bottom: 20px;
}
.container {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.box {
  width: 80%;
  max-width: 500px;
  height: 250px;
  border: 2px solid #000000;
  margin-bottom: 20px;
  padding: 10px;
}
.box h2 {
  margin-top: 0;
  font-size: 12px;
}

.box p {
  font-size: 10px;
  margin-top: 10px;
}
	</style>
</head>
<body>
    <nav>
      <ul>
        <li><a href="/details">Details</a></li>
      </ul>
    </nav>
    <div class="container">
      <% for(var i=0; i<formlist.length; i++) { %>
        <div class="box">
          <h2>Date</h2>
          <p><%= formlist[i].dates %></p>
          <h2>Time</h2>
          <p><%= formlist[i].times %></p>
          <h2>Club</h2>
          <p><%= formlist[i].club %></p>
          <h2>Event</h2>
          <p><%= formlist[i].event %></p>
          <h2>Description</h2>
          <p><%= formlist[i].description %></p>
        </div>
      <% } %>
    </div>
  </body>
  
</html>
